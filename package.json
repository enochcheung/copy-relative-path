{
  "name": "copy-relative-path",
  "displayName": "Copy Relative Path of Active File",
  "description": "Copy relative path of active file, complementing the built-in workbench.action.files.copyPathOfActiveFile",
  "version": "0.1.2",
  "publisher": "enochc",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.copyRelativePathOfActiveFile"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Copy Relative Path of Active File configuration",
      "properties": {
        "relativePath.mult-root": {
          "type": "boolean",
          "default": false,
          "description": "Support for mutli-root workspaces. Shifts the path in by 1"
        },
        "relativePath.prefix": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Adds a prefix to your relative path"
        }
      }
    },
    "commands": [
      {
        "command": "extension.copyRelativePathOfActiveFile",
        "title": "Copy Relative Path of Active File"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/copy-paste": "^1.1.30",
    "@types/mocha": "^2.2.48",
    "@types/node": "^6.0.40",
    "@types/sinon": "^4.1.3",
    "mocha": "2.3.3",
    "sinon": "^4.4.0",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "copy-paste": "^1.3.0"
  }
}
